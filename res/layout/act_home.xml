<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/act_home_vp"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#2adddd"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/act_home_home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="首页"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/act_home_msg"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/msg_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信息"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/act_home_addgather"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/add_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/act_home_my"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/my_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/act_home_more"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/more_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多"
                        android:textColor="#fff"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawer_linear1"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_gravity="start"
            android:background="#fff"
            android:orientation="vertical" >

            <View
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#2adddd" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/qu" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:src="@drawable/you" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#929292" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="completeOnClick"
                android:padding="7dp"
                android:text="修改资料"
                android:textSize="22sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#929292" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="updatepswOnClick"
                android:padding="7dp"
                android:text="修改密码"
                android:textSize="22sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#929292" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="exitOnClick"
                android:padding="10dp"
                android:text="退出登录"
                android:textSize="22sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#929292" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>