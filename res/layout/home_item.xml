<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <cn.xdl.lewan.view.MyImageView
                android:id="@+id/home_item_usericon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/mruicon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/home_item_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/home_item_usersex"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/nan" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/home_item_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100元"
                        android:textColor="#626262"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/home_item_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昨天 20:30"
                        android:textColor="#626262"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/home_item_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距您2.4km"
                        android:textColor="#626262"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/home_item_gathername"
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="这里是活动的描述信息，我来写长一些，让他换行。。。。。。"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/home_item_gatherpng"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/huodongtu" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal"
	    android:background="@drawable/item_zj"
	    android:gravity="center_horizontal"
	    >
	    <ImageView 
	        android:id="@+id/home_item_love"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:src="@drawable/loveoff"
	        />
	</LinearLayout>
</LinearLayout>